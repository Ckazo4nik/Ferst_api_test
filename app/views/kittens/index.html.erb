<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kittens.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.age %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_kitten_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

